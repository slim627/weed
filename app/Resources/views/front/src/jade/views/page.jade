div#view-content.page-header-fixed.page-sidebar-closed-hide-logo.page-container-bg-solid(ng-controller='AppController', ng-class="{'page-content-white': settings.layout.pageContentWhite,'page-container-bg-solid': settings.layout.pageBodySolid, 'page-sidebar-closed': settings.layout.pageSidebarClosed}")
    // BEGIN PAGE SPINNER
    .page-spinner-bar(ng-spinner-bar='')
      .bounce1
      .bounce2
      .bounce3
    // END PAGE SPINNER
    // BEGIN HEADER
    .page-header.navbar.navbar-fixed-top(data-ng-include="'tpl/header.html'", data-ng-controller='HeaderController')
    // END HEADER
    .clearfix
    // BEGIN CONTAINER
    .page-container
      // BEGIN SIDEBAR
      .page-sidebar-wrapper(data-ng-include="'tpl/sidebar.html'", data-ng-controller='SidebarController')
      // END SIDEBAR

      // BEGIN CONTENT
      .page-content-wrapper
        .page-content
          // BEGIN ACTUAL CONTENT
          .fade-in-up(ui-view='' name="page-view")
          // END ACTUAL CONTENT
      // END CONTENT

    // END CONTAINER
    // BEGIN FOOTER
    .page-footer(data-ng-include="'tpl/footer.html'", data-ng-controller='FooterController')
    // END FOOTER


