// BEGIN HEADER INNER
.page-header-inner
  // BEGIN LOGO
  .page-logo
    a(href='#/')
      img.logo-default(src='./img/logo.png', alt='logo')
    .menu-toggler.sidebar-toggler
      // DOC: Remove the above "hide" to enable the sidebar toggler button on header
  // END LOGO
  // BEGIN HEADER SEARCH BOX
  // DOC: Apply "search-form-expanded" right after the "search-form" class to have half expanded search box
  form.search-form(action='#', method='GET')
    .input-group
      input.form-control(type='text', placeholder='Search...', name='query')
      span.input-group-btn
        a.btn.submit(href='javascript:;')
          i.icon-magnifier
  // END HEADER SEARCH BOX
  // BEGIN RESPONSIVE MENU TOGGLER
  a.menu-toggler.responsive-toggler(href='javascript:;', data-toggle='collapse', data-target='.navbar-collapse')
  // END RESPONSIVE MENU TOGGLER
  // BEGIN TOP NAVIGATION MENU
  .top-menu
    ul.nav.navbar-nav.pull-right
      // BEGIN NOTIFICATION DROPDOWN
      // DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte
      li#header_notification_bar.dropdown.dropdown-extended.dropdown-notification
        a.dropdown-toggle(href='#', dropdown-menu-hover='', data-toggle='dropdown', data-close-others='true')
          i.icon-bell
          span.badge.badge-default  7
        ul.dropdown-menu
          li.external
            h3
              span.bold 12 pending
              |  notifications
            a(href='#/profile/dashboard') view all
          li
            ul.dropdown-menu-list.scroller(style='height: 250px;', data-handle-color='#637283')
              li
                a(href='javascript:;')
                  span.time just now
                  span.details
                    span.label.label-sm.label-icon.label-success
                      i.fa.fa-plus
                    |  New user registered.
              li
                a(href='javascript:;')
                  span.time 3 mins
                  span.details
                    span.label.label-sm.label-icon.label-danger
                      i.fa.fa-bolt
                    |  Server #12 overloaded.
              li
                a(href='javascript:;')
                  span.time 10 mins
                  span.details
                    span.label.label-sm.label-icon.label-warning
                      i.fa.fa-bell-o
                    |  Server #2 not responding.
              li
                a(href='javascript:;')
                  span.time 14 hrs
                  span.details
                    span.label.label-sm.label-icon.label-info
                      i.fa.fa-bullhorn
                    |  Application error.
              li
                a(href='javascript:;')
                  span.time 2 days
                  span.details
                    span.label.label-sm.label-icon.label-danger
                      i.fa.fa-bolt
                    |  Database overloaded 68%.
              li
                a(href='javascript:;')
                  span.time 3 days
                  span.details
                    span.label.label-sm.label-icon.label-danger
                      i.fa.fa-bolt
                    |  A user IP blocked.
              li
                a(href='javascript:;')
                  span.time 4 days
                  span.details
                    span.label.label-sm.label-icon.label-warning
                      i.fa.fa-bell-o
                    |  Storage Server #4 not responding dfdfdfd.
              li
                a(href='javascript:;')
                  span.time 5 days
                  span.details
                    span.label.label-sm.label-icon.label-info
                      i.fa.fa-bullhorn
                    |  System Error.
              li
                a(href='javascript:;')
                  span.time 9 days
                  span.details
                    span.label.label-sm.label-icon.label-danger
                      i.fa.fa-bolt
                    |  Storage server failed.
      // END NOTIFICATION DROPDOWN

      // DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte
      li.dropdown.dropdown-user
        a.dropdown-toggle(href='#')
          img.img-circle(alt='', src='{{settings.layoutPath}}/img/avatar3_small.jpg')
          span.username.username-hide-on-mobile  Nick

      // BEGIN QUICK SIDEBAR TOGGLER
      // DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte
      li.dropdown.dropdown-quick-sidebar-toggler
        a.dropdown-toggle(href='javascript:;')
          i.icon-logout
      // END QUICK SIDEBAR TOGGLER
  // END TOP NAVIGATION MENU
// END HEADER INNER

